<div class="container">
  <div class="card mb-3">
    <div class="card-title">
      <h1><%= @post.title %></h1>
    </div>
    <hr>
    <div class="card-body">
      <%= @post.content %>
    </div>
    <div>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %>
      <%= link_to "Delete", edit_post_path(@post), class: "btn btn-danger" %>
    </div>
  </div>


</div>
